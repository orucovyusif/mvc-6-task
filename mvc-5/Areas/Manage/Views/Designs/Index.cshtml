@using mvc_5.Models;
@model List<Portfolio>
@{
    int count = 0;
}
<div class="container">

    <h1><a class="btn btn-primary" asp-action="Create">Create</a></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td><img src="~/Upload/@item.ImgUrl"><img/></td>
                </tr>
            }

        </tbody>
    </table>
</div>