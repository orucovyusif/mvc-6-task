@using Core.Models;
@model List<Event>
@{
    int counter = 1;
}
<div class="container">
    <div class="row">
        <div class="col-4 mb-3">
            <a asp-action="Create" asp-controller="Event" class="btn btn-primary">Create Event</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">ImageFile</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                         <tr>
                        <th scope="row">@(counter++)</th>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td><img src="/uploads//events/@item.ImageUrl" width="100" height="100" /></td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>