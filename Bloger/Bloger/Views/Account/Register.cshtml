@using Bloger.ViewModels;
@model MemberRegisterVm

<!-- banner -->
<div class="banner">
	<div class="container">
		<!-- form content / register area -->
		<div class="register-area">
			<!-- heading -->
			<h3>Sign Up, For An Account</h3>
			<form asp-action="Register" method="post" id="register-form">
				<div class="form-group">
					<input asp-for="FullName" class="form-control" id="exampleInputName1" placeholder="Full Name">
					<span asp-validation-for="FullName" class="text-danger"></span>
					
				</div>
				<div class="form-group">
					<input asp-for="UserName" class="form-control" id="exampleInputName1" placeholder="Username">
					<span asp-validation-for="UserName" class="text-danger"></span>

				</div>
				
				<div class="form-group">
					<input asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input asp-for="RepeatPassword" class="form-control" id="exampleInputPassword2" placeholder="Re-Password">
					<span asp-validation-for="RepeatPassword" class="text-danger"></span>
				</div>
				
				<button type="submit" class="btn btn-default">SignUp</button>&nbsp;
			</form>
		</div>
	</div>
</div>
<!-- banner end -->